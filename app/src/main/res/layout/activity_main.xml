<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_welcome_msg"
        android:textSize="25sp"
        android:padding="10sp"
        android:textColor="@color/gold" />

    <Button
        android:id="@+id/btn_first"
        android:layout_marginTop="50sp"
        android:layout_marginHorizontal="50sp"
        android:backgroundTint="@color/blue_a_700"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_txt_page1"
        app:icon="@android:drawable/btn_star_big_on" />

    <Button
        android:id="@+id/btn_second"
        android:layout_marginHorizontal="50sp"
        android:backgroundTint="@color/red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_txt_page2"
        app:icon="@android:drawable/btn_star_big_on" />

    <Button
        android:id="@+id/btn_third"
        android:layout_marginHorizontal="50sp"
        android:backgroundTint="@color/blue_900"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_txt_page3"
        app:icon="@android:drawable/btn_star_big_on" />

</LinearLayout>