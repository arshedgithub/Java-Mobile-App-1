<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Page02">

    <TextView
        android:id="@+id/page_2_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15sp"
        android:text="Basic Calculator"
        android:textAlignment="center"
        android:background="@color/blue_800"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/btn_pg_2_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:backgroundTint="@color/black"
        android:text="Home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_pg_2_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:backgroundTint="@color/blue_a_400"
        android:text="Page 01"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_pg_2_home" />

    <Button
        android:id="@+id/btn_pg_2_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blue_a_400"
        android:text="Page 03"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.246"
        app:layout_constraintStart_toEndOf="@id/btn_pg_2_2" />

    <TextView
        android:id="@+id/output_txt"
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:layout_margin="20sp"
        android:textSize="30sp"
        android:text="0"
        app:layout_constraintTop_toBottomOf="@id/page_2_head"
        android:textAlignment="textEnd" />


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/output_txt"
        android:padding="10sp" >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/btn_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blue_a_100"
                android:width="55sp"
                android:height="85sp"
                android:textSize="35sp"
                android:layout_margin="5sp"
                android:textColor="@color/black"
                android:text="1"
                 />

            <Button
                android:id="@+id/btn_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blue_a_100"
                android:width="55sp"
                android:height="85sp"
                android:textSize="35sp"
                android:layout_margin="5sp"
                android:textColor="@color/black"
                android:text="2" />

            <Button
                android:id="@+id/btn_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blue_a_100"
                android:width="55sp"
                android:height="85sp"
                android:textSize="35sp"
                android:layout_margin="5sp"
                android:textColor="@color/black"
                android:text="3"
                 />

            <Button
                android:id="@+id/btn_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blue_900"
                android:width="55sp"
                android:height="85sp"
                android:textSize="35sp"
                android:layout_margin="5sp"
                android:text="+"
                 />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/btn_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blue_a_100"
                android:width="55sp"
                android:height="85sp"
                android:textSize="35sp"
                android:layout_margin="5sp"
                android:textColor="@color/black"
                android:text="4"
                 />

            <Button
                android:id="@+id/btn_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blue_a_100"
                android:width="55sp"
                android:height="85sp"
                android:textSize="35sp"
                android:layout_margin="5sp"
                android:textColor="@color/black"
                android:text="5"
                 />

            <Button
                android:id="@+id/btn_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blue_a_100"
                android:width="55sp"
                android:height="85sp"
                android:textSize="35sp"
                android:layout_margin="5sp"
                android:textColor="@color/black"
                android:text="6"
                 />

            <Button
                android:id="@+id/btn_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blue_900"
                android:width="55sp"
                android:height="85sp"
                android:textSize="40sp"
                android:layout_margin="5sp"
                android:text="-"
                 />

        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/btn_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blue_a_100"
                android:width="55sp"
                android:height="85sp"
                android:textSize="35sp"
                android:layout_margin="5sp"
                android:textColor="@color/black"
                android:text="7"
                 />

            <Button
                android:id="@+id/btn_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blue_a_100"
                android:width="55sp"
                android:height="85sp"
                android:textSize="35sp"
                android:layout_margin="5sp"
                android:textColor="@color/black"
                android:text="8"
                 />

            <Button
                android:id="@+id/btn_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blue_a_100"
                android:width="55sp"
                android:height="85sp"
                android:textSize="35sp"
                android:layout_margin="5sp"
                android:textColor="@color/black"
                android:text="9"
                 />

            <Button
                android:id="@+id/btn_mul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blue_900"
                android:width="55sp"
                android:height="85sp"
                android:textSize="40sp"
                android:layout_margin="5sp"
                android:text="x"
                 />

        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/btn_cl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/red"
                android:width="55sp"
                android:height="85sp"
                android:textSize="35sp"
                android:layout_margin="5sp"
                android:text="C"
                 />

            <Button
                android:id="@+id/btn_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blue_a_100"
                android:width="55sp"
                android:height="85sp"
                android:textSize="35sp"
                android:layout_margin="5sp"
                android:textColor="@color/black"
                android:text="0"
                 />

            <Button
                android:id="@+id/btn_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blue_900"
                android:width="55sp"
                android:height="85sp"
                android:textSize="35sp"
                android:layout_margin="5sp"
                android:text="="
                 />

            <Button
                android:id="@+id/btn_div"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blue_900"
                android:width="55sp"
                android:height="85sp"
                android:textSize="40sp"
                android:layout_margin="5sp"
                android:text="/"
                 />

        </TableRow>

    </TableLayout>




</androidx.constraintlayout.widget.ConstraintLayout>